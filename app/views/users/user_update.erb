<h2 id="page-title">Update Your Profile:</h2>

<div class="input-group input-group-lg">

  <form action="/user_update" method="POST">

    <div class="form-group form-group-lg">
      <label name="name">
        <input type="text"
          class="form-control input-lg"
            value="<%= @user.name %>"
              name="name"
                aria-describedby="sizing-addon1"
                  placeholder="Name"
         >
       </label>
       <br>
     </div>

      <div class="form-group">
        <label name="username">
          <input type="text"
            class="form-control input-lg"
              value="<%= @user.username %>"
                name="username"
                  placeholder="Username"
           >
         </label>
         <br>
       </div>

       <div class="form-group">
         <label name="email">
           <input type="email"
            class="form-control input-lg"
              value="<%= @user.email %>"
                placeholder="Email"
                  name="email"
                    aria-describedby="sizing-addon1"
            >
          </label>
          <br>
        </div>

        <div class="form-group">
          <label name="facebook_url">
            <input type="text"
              class="form-control input-lg"
                value="<%= @user.facebook_url %>"
                  placeholder="Your Facebook Profile Link"
                    name="facebook_url"
                      aria-describedby="sizing-addon1"
            >
          </label>
          <br>
        </div>

        <div class="form-group">
          <label name="twitter_url">
            <input type="text"
              name="twitter_url"
                class="form-control input-lg"
                  value="<%= @user.twitter_url %>"
                    placeholder="Your Twitter Profile Link"
                      aria-describedby="sizing-addon1"
              >
            </label>
            <br>
          </div>

          <div class="form-group">
            <label name="instagram_url">
              <input type="text"
                name="instagram_url"
                  class="form-control input-lg"
                    value="<%= @user.instagram_url %>"
                      placeholder="Your Instagram Profile Link"
                        aria-describedby="sizing-addon1"
               >
             </label>
             <br>
           </div>

           <div class="form-group">
             <label name="about_me">
                <textarea name="about_me"
                  class="form-control input-lg">
                    <% if @user.about_me == nil || @user.about_me == "" %>
                      <%= "About Me" %>
                    <% else %>
                      <%= @user.about_me %>
                    <% end %>
                  </textarea>
                </label>
                <br>
              </div>

          <div class="form-group">
            <label name="submit">
              <input type="submit"
                value="Submit"
                  class="btn btn-default"
              >
            </label>
          </div>
        </form>
      </div>

  <br>

  <h2 id="page-title">Update Your Password:</h2>

    <form action="/update-pw" method="POST">

      <input type="hidden"
        name="pw_username"
          value="<%= @user.username %>"
      >

      <input type="password"
        name="old_password"
          placeholder="Old Password: "
      >
      <br>

      <input type="password"
        name="new_password"
          placeholder="New Password: "
      >
      <br>

      <input type="submit" value="Update">
      
    </form>
